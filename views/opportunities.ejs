    <h2>Opportunities and Events</h2>

    <% if (opportunities.length === 0) { %>
        <p>No opportunities available.</p>
    <% } else { %>
        <% opportunities.forEach(opportunity => { %>
            <a href="/opportunities/<%= opportunity.opp_id %>" class="opportunity-button">
                <h3><%= opportunity.event %></h3>
                <p><strong>Organizer/Organization:</strong> <%= opportunity.organization %></p>
                <p><strong>Date:</strong> <%= new Date(opportunity.date).toISOString().slice(0, 10) %></p>
            </a>
        <% }); %>
    <% } %>

    <div class="submit-article-container">
        <div>
            <button id="submit-article-btn" class="black-text col">Post an Opportunity</button>
        </div>
    </div>
</div>

    <div id="articleModal" class="modal">
        <div class="modal-content">
            <span class="close">&times;</span>
            <h2>Submit an Event</h2>
            <form id="articleForm" action = "/submit-opp" method = "POST">
                <div class="input-field">
                    <label for="first_name">First Name</label>
                    <input type="text" id="first_name" name="first_name" required>
                </div>
                <div class="input-field">
                    <label for="last_name">Last Name</label>
                    <input type="text" id="last_name" name="last_name" required>
                </div>
                <div class="input-field">
                  <label for="organization">Organization</label>
                  <input type="text" id="organization" name="organization">
              </div>
                <div class="input-field">
                  <label for="email">Email (used to sign up)</label>
                  <input type="text" id="email" name="email" required>
              </div>
                <div class="input-field">
                    <label for="event">Event/Opportunity</label>
                    <input type="text" id="event" name="event" required>
                </div>
                <div class="input-field">
                    <label for="description">Description</label>
                    <textarea id="description" name="description" required></textarea>
                </div>
                <div class="input-field">
                    <label for="date">Event Date</label>
                    <input type="date" id="date" name="date" required>
                </div>
                <button type="submit" class="submit-btn">Post Event</button>
            </form>
            <p id = "formP">To prevent misinformation, all submissions will be reviewed before being posted.</p>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
